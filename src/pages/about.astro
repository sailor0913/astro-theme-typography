---
import LayoutDefault from '../layouts/LayoutDefault.astro'

const personalInfo = {
  name: 'sailor0913',
  title: '菜、爱玩、爱折腾、老年人',
  bio: '热爱生活、热爱折腾',
  quote: '代码如诗，编程如画',
  skills: ['JavaScript', 'Python'],
  interests: ['编程', '读书', '运动'],
}
---

<LayoutDefault>
  <section contain-layout flex="~ col gap-7.5" class="max-w-3xl mx-auto">
    <article class="prose">
      <section class="text-center mb-12">
        <img class="w-40 h-40 rounded-full mx-auto mb-4 shadow-lg" src="/images/avatar.png" alt={personalInfo.name} />
        <h1 class="text-4xl font-bold mb-2">{personalInfo.name}</h1>
        <p class="text-xl">{personalInfo.title}</p>
      </section>

      <div class="space-y-8">
        <section id="about" class="p-6 bg-gray-100 rounded-lg shadow-md">
          <p class="mb-4 text-center italic">{personalInfo.bio}</p>
          <blockquote class="border-l-4 border-current pl-4 italic text-center">
            "{personalInfo.quote}"
          </blockquote>
        </section>

        <div class="grid md:grid-cols-2 gap-8">
          <section id="skills" class="p-6 bg-gray-100 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold mb-4 text-center">技能</h2>
            <div class="flex flex-wrap justify-center gap-3">
              {
                personalInfo.skills.map((skill) => (
                  <span class="bg-foreground text-background rounded-full px-4 py-2 text-sm font-semibold">
                    {skill}
                  </span>
                ))
              }
            </div>
          </section>

          <section id="interests" class="p-6 bg-gray-100 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold mb-4 text-center">兴趣爱好</h2>
            <ul class="flex flex-wrap justify-center gap-3">
              {
                personalInfo.interests.map((interest) => (
                  <li class="bg-foreground text-background rounded-full px-4 py-2 text-sm font-semibold">{interest}</li>
                ))
              }
            </ul>
          </section>
        </div>
      </div>

      <section id="support" class="mt-12 text-center">
        <h2 class="text-2xl font-semibold mb-4">支持我的创作 ☕️💖</h2>
        <p class="mb-6 text-lg">如果我的文章帮助到你,可以请我喝杯咖啡哦! 🎉✨</p>
        <div class="flex justify-center space-x-8">
          <div class="qr-code">
            <img src="/images/weixin.jpg" alt="微信赞赏码" class="w-40 h-40 mx-auto mb-2 rounded-lg shadow-md" />
            <p class="text-sm">微信赞赏码WeChat</p>
          </div>
          <div class="qr-code">
            <img src="/images/zhifubao.jpg" alt="支付宝收款码" class="w-40 h-40 mx-auto mb-2 rounded-lg shadow-md" />
            <p class="text-sm">支付宝收款码 💰Alipay</p>
          </div>
        </div>
        <p class="mt-6 text-sm italic">您的支持是我持续创作的动力! 🚀</p>
      </section>
    </article>
  </section>
</LayoutDefault>
